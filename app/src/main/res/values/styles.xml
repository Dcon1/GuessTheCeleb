<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
        arent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>


        <item name="android:spinnerItemStyle">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:spinnerDropDownItemStyle">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <style name="headline" parent="TextAppearance.AppCompat.Display2">
    <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="large" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
